<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F3"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvHaloNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo Dione!"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvUcapanTerimaKasih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terima kasih sudah memesan dan mohon tunggu di lokasi sampai kurir mengirimkan pesanan anda."
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:backgroundTint="#FF6B00"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>
